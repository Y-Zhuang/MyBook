<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/shape_import_bg">

    <EditText
        android:id="@+id/imp_url_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/imp_add_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="@string/imp_add_text"
        android:textSize="20sp"
        android:layout_below="@+id/imp_url_et"
        android:layout_alignRight="@+id/imp_url_et"
        android:background="@drawable/shape_my_btn_bg"/>

    <Button
        android:id="@+id/imp_cancel_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="@string/imp_cancel_text"
        android:textSize="20sp"
        android:layout_below="@+id/imp_url_et"
        android:layout_alignLeft="@+id/imp_url_et"
        android:background="@drawable/shape_my_btn_bg"/>

    </RelativeLayout>

</LinearLayout>
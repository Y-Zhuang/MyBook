<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/my_icon_riv"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_picture"
        app:riv_oval="true">

    </com.makeramen.roundedimageview.RoundedImageView>

    <TextView
        android:id="@+id/my_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorMyNameText"
        android:layout_below="@+id/my_icon_riv"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/my_display_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/my_display_text"
        android:textSize="15sp"
        android:textColor="@color/colorMyBtnText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_name_tv"
        android:background="@drawable/shape_my_btn_bg"/>

    <Button
        android:id="@+id/my_import_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/my_import_text"
        android:textSize="15sp"
        android:textColor="@color/colorMyBtnText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_display_btn"
        android:background="@drawable/shape_my_btn_bg"/>

</RelativeLayout>